{
  "name": "linguist",
  "displayName": "github-linguist",
  "description": "Displays analysis of language use from the github-linguist Ruby gem.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "linguist.inquireFile",
        "title": "Linguist: Inquire file",
        "description": "Get language of an individual file"
      },
      {
        "command": "linguist.breakdownGit",
        "title": "Linguist: Breakdown Git",
        "description": "Get language breakdown of a git repository"
      },
      {
        "command": "linguist.breakdownWorkspace",
        "title": "Linguist: Breakdown Workspace",
        "description": "Get language breakdown of the current workspace"
      },
      {
        "command": "linguist.breakdownDir",
        "title": "Linguist: Breakdown Directory",
        "description": "Get language breakdown of the current directory"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Linguist",
      "properties": {
        "linguist.rubyExecutable": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "ruby",
          "markdownDescription": "Path to Ruby executable."
        },
        "linguist.gemExecutable": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "gem",
          "markdownDescription": "Path to Gem executable."
        },
        "linguist.linguistExecutable": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "github-linguist",
          "markdownDescription": "Path to linguist executable."
        },
        "linguist.linguistExtExecutable": {
          "scope": "machine-overridable",
          "type": "string",
          "default": "bin/linguist-ext",
          "markdownDescription": "Path to linguist-ext executable."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}